{
  "name": "geekconsole",
  "version": "0.0.2",
  "description": "",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "start": "remix-serve build",
    "build": "run-s build:*",
    "build:remix": "remix build",
    "build:tailwindcss": "tailwindcss -i ./app/core/styles/index.css --minify -o ./app/styles.css",
    "dev": "run-p dev:*",
    "dev:remix": "remix dev",
    "dev:tailwindcss": "tailwindcss -i ./app/core/styles/index.css -o ./app/styles.css --watch",
    "typecheck": "npx tsc",
    "lint:ts": "npx eslint . --ext  .ts,.tsx ./app",
    "lint:ts:fix": "npx eslint . --ext .ts,.tsx ./app --fix",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "format": "npx prettier --write ./app/**/*.{js,jsx,ts,tsx}",
    "format:check": "npx prettier --check ./app/**/*.{js,jsx,ts,tsx}",
    "release": "standard-version --no-verify",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-radio-group": "^1.1.3",
