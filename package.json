    "postcss": "^8.4.23",
    "prettier": "2.8.8",
    "prop-types": "^15.8.1",
    "standard-version": "^9.5.0",
    "storybook": "^7.0.9",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.0.4"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true"
